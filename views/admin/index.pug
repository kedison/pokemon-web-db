                                                            label.col-sm-2.col-form-label(for='inputImage') Image
                                                            .col-sm-10
                                                                input#inputImage.form-control(type='text' placeholder='image' name='image' value=PokemondbStructure.image)
                                                        br
                                                        button.btn.btn-primary.btn-lg.btn-block Update
                                                        
                                td 
                                    - var deleteIdModal = `deleteModal${PokemondbStructure.id}`
                                    button.badge.badge-danger(type='button' data-backdrop='static' data-toggle='modal' data-target=`#${deleteIdModal}`) Delete
                                    div.modal.fade(id=`${deleteIdModal}` tabindex='-1' role='dialog' aria-labelledby='deleteModalTitle' aria-hidden='true')
                                        .modal-dialog.modal-dialog-centered(role='document')
                                            .modal-content
                                                //- .modal-header
                                                //-     h5#deleteModalTitle.modal-title Confirmation of Delete
